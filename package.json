{
    "name": "@owc/cardano-components",
    "version": "0.1.0",
    "description": "Open Web Components library for Cardano and IPFS decentralized applications",
    "private": true,
    "workspaces": [
      "packages/*"
    ],
      "scripts": {
    "dev": "echo 'Use individual package dev servers: npm run dev:login or npm run dev:shared'",
    "dev:login": "cd packages/login-component && npm run dev",
    "dev:shared": "cd packages/shared && npm run dev",
    "dev:demo": "cd demo && npm run dev",
    "build:watch": "concurrently \"cd packages/shared && npm run build:watch\" \"cd packages/login-component && npm run build:watch\"",
      "dev:packages": "nx run-many --target=dev --all",
      "build": "nx run-many --target=build --all",
      "test": "nx run-many --target=test --all",
      "lint": "nx run-many --target=lint --all",
      "format": "prettier --write \"**/*.{js,ts,json,md}\"",
      "storybook": "nx run storybook:serve",
      "build-storybook": "nx run storybook:build",
      "publish": "lerna publish",
      "clean": "nx reset && lerna clean"
    },
    "devDependencies": {
          "@nx/workspace": "^18.0.0",
    "@nx/storybook": "^18.0.0",
    "@nx/vite": "^18.0.0",
    "@nx/eslint-plugin": "^18.0.0",
    "@nx/jest": "^18.0.0",
          "@open-wc/eslint-config": "^12.0.0",
    "@open-wc/testing": "^3.0.0",
    "@open-wc/testing-helpers": "^2.0.0",
      "@web/test-runner": "^0.16.0",
      "@web/test-runner-commands": "^0.8.0",
      "@typescript-eslint/eslint-plugin": "^6.0.0",
      "@typescript-eslint/parser": "^6.0.0",
      "eslint": "^8.0.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-lit": "^1.8.0",
      "jest": "^29.0.0",
      "lerna": "^7.0.0",
      "nx": "^18.0.0",
      "prettier": "^3.0.0",
      "storybook": "^7.0.0",
      "typescript": "^5.0.0",
      "vite": "^5.0.0",
      "vite-plugin-dts": "^3.0.0",
      "concurrently": "^8.0.0"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=8.0.0"
    },
    "keywords": [
      "web-components",
      "cardano",
      "ipfs",
      "decentralized",
      "lit",
      "open-wc"
    ],
    "author": "Kevin Gray",
    "license": "MIT"
  }